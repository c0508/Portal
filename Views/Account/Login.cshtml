@model ESGPlatform.Models.ViewModels.LoginViewModel
@{
    Layout = null;
    
    // Get branding context for the default organization (we'll enhance this later for multi-tenant)
    var brandingService = Context.RequestServices.GetRequiredService<ESGPlatform.Services.IBrandingService>();
    var brandingContext = await brandingService.GetDefaultBrandingAsync(1); // Default to first organization
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - @brandingContext.OrganizationName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            @Html.Raw(brandingContext.ToCssVariables())
        }
        
        * {
            box-sizing: border-box;
        }
        
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, var(--brand-primary), var(--brand-secondary));
            color: #374151;
        }

        .login-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            width: 100%;
            max-width: 420px;
            padding: 3rem 2rem;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .brand-section {
            margin-bottom: 2.5rem;
        }

        .brand-logo {
            width: 80px;
            height: 80px;
            background: var(--brand-primary);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            font-weight: 700;
            color: white;
            text-transform: uppercase;
            letter-spacing: -0.025em;
        }

        .organization-name {
            font-size: 2.25rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 0.5rem;
            letter-spacing: -0.025em;
        }

        .platform-subtitle {
            font-size: 1.125rem;
            color: #6B7280;
            font-weight: 500;
            margin-bottom: 0.25rem;
        }

        .platform-description {
            font-size: 0.875rem;
            color: #9CA3AF;
            font-weight: 400;
        }

        .login-form-section {
            text-align: left;
            margin-top: 2rem;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 2rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid #E5E7EB;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.2s ease;
            background-color: #FAFAFA;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--brand-primary);
            background-color: white;
            box-shadow: 0 0 0 3px rgba(var(--brand-primary-rgb), 0.1);
        }

        .form-control::placeholder {
            color: #9CA3AF;
        }

        .btn-sign-in {
            width: 100%;
            padding: 0.875rem 1rem;
            background: var(--brand-primary);
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 0.5rem;
        }

        .btn-sign-in:hover {
            background: var(--brand-secondary);
            transform: translateY(-1px);
            box-shadow: 0 10px 25px -5px rgba(var(--brand-primary-rgb), 0.3);
        }

        .btn-sign-in:active {
            transform: translateY(0);
        }

        .request-access {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #E5E7EB;
            text-align: center;
        }

        .request-access-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #6B7280;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .request-access-link:hover {
            color: var(--brand-primary);
        }

        .validation-summary-errors {
            background: #FEF2F2;
            border: 1px solid #FECACA;
            color: #B91C1C;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border-radius: 8px;
            font-size: 0.875rem;
        }

        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .validation-summary-errors li {
            margin-bottom: 0.25rem;
        }

        .validation-summary-errors li:last-child {
            margin-bottom: 0;
        }

        .field-validation-error {
            color: #DC2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        /* Responsive adjustments */
        @@media (max-width: 640px) {
            .login-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
                border-radius: 12px;
            }
            
            .organization-name {
                font-size: 1.875rem;
            }
            
            .brand-logo {
                width: 64px;
                height: 64px;
                font-size: 1.5rem;
            }
        }

        /* Loading state for form submission */
        .btn-sign-in:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .btn-sign-in.loading::after {
            content: "";
            width: 16px;
            height: 16px;
            margin-left: 8px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="brand-section">
                <div class="brand-logo">
                    @if (!string.IsNullOrEmpty(brandingContext.LogoUrl))
                    {
                        <img src="@brandingContext.LogoUrl" alt="@brandingContext.OrganizationName" style="width: 100%; height: 100%; object-fit: contain; border-radius: 12px;" />
                    }
                    else
                    {
                        @brandingContext.OrganizationName.Substring(0, Math.Min(2, brandingContext.OrganizationName.Length))
                    }
                </div>
                
                <h1 class="organization-name">@brandingContext.OrganizationName</h1>
                <p class="platform-subtitle">Double Materiality</p>
                <p class="platform-description">Assessment Platform</p>
            </div>

            <div class="login-form-section">
                <h2 class="form-title">Sign In</h2>
                
                <form asp-action="Login" method="post" id="loginForm">
                    <div asp-validation-summary="All" class="validation-summary-errors"></div>
                    <input name="ReturnUrl" type="hidden" value="@ViewData["ReturnUrl"]" />
                    
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="user@company.com" autocomplete="email" />
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="••••••••" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>
                    
                    <button type="submit" class="btn-sign-in" id="signInBtn">
                        Sign In
                    </button>
                </form>

                <div class="request-access">
                    <a href="mailto:admin@esgplatform.com?subject=Request%20Access%20to%20@Uri.EscapeDataString(brandingContext.OrganizationName)%20ESG%20Platform&body=Hello,%0D%0A%0D%0AI%20would%20like%20to%20request%20access%20to%20the%20@Uri.EscapeDataString(brandingContext.OrganizationName)%20ESG%20Assessment%20Platform.%0D%0A%0D%0APlease%20provide%20me%20with%20login%20credentials.%0D%0A%0D%0AThank%20you,%0D%0A[Your%20Name]" 
                       class="request-access-link">
                        <i class="fas fa-envelope"></i>
                        Request Access
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Enhanced form submission with loading state
        document.getElementById('loginForm').addEventListener('submit', function() {
            const submitBtn = document.getElementById('signInBtn');
            submitBtn.disabled = true;
            submitBtn.classList.add('loading');
            submitBtn.textContent = 'Signing In...';
        });

        // Auto-focus email field on page load
        document.addEventListener('DOMContentLoaded', function() {
            const emailField = document.querySelector('input[name="Email"]');
            if (emailField && !emailField.value) {
                emailField.focus();
            }
        });
    </script>
</body>
</html> 